<div class="m-3">
  <h1>My tasks</h1>
  <%= link_to 'Create new task', new_task_path %>
  <ul class="p-0 my-3" style="list-style-type:none">
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
        <p><%= task.details %></p>
      </li>
    <% end %>
  </ul>
</div>
